@model FoodOrderingSystem.Models.Menu

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="margin-bottom: 2rem;">Add New Menu Item</h2>

<form asp-action="AddMenu" method="post" enctype="multipart/form-data" style="
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
    max-width: 500px;
">

    <div style="display: flex; flex-direction: column;">
        <label>Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div style="display: flex; flex-direction: column;">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div style="display: flex; flex-direction: column;">
        <label>Price</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div style="display: flex; flex-direction: column;">
        <label>Category Id</label>
        <input asp-for="Category_id" type="number" class="form-control" />
        <span asp-validation-for="Category_id" class="text-danger"></span>
    </div>

    <div style="display: flex; flex-direction: column;">
        <label>Image</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>

    <div style="display: flex; align-items: center; gap: 0.5rem;">
        <label for="Available">Available</label>
        <input asp-for="Available" type="checkbox" />
    </div>

    <button type="submit" class="btn btn-primary" style="width: fit-content;">Add Menu Item</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
