@model FoodOrderingSystem.ViewModel.LoginViewModel

@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Tato Tato</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
</head>
<body>

<section class="h-100 d-flex flex-column justify-content-center align-items-center page-gradient" style="padding-bottom:4rem;">

    <div class="d-flex align-items-center gap-3 mb-4 mt-2">
        <img src="~/images/RegisterIcon.png" alt="Logo" class="register-logo-sm" />
        <span class="h1 fw-bold mb-0 brand-header">Tato Tato</span>
    </div>

    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col col-xl-8">
                <div class="card shadow rounded-card">
                    <div class="row g-0" style="height: 66.5vh;" >
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="~/images/form-img.jpg"
                                 alt="Register visual" class="img-fluid rounded-start" style="width: 100%; height: 100%; object-fit: cover;" />
                        </div>

                        <div class="col-md-6 d-flex align-items-center" style="padding: 2rem;">
                            <div class="card-body px-lg-5 text-black">

                                <form asp-action="Login" enctype="multipart/form-data" method="post">

                                    <h3 class="fw-bold mb-4 text-center text-uppercase form-header">
                                        Login to Your Account
                                    </h3>

                                   
                                  

                                  

                                    <div class="form-outline mb-3">
                                        <input asp-for="Email" type="email" placeholder="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-3">
                                        <input asp-for="Password" type="password" placeholder="Password" class="form-control" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                                                      @if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger text-center mb-3">
        @ViewBag.ErrorMessage
    </div>
}


                                  

                                    <div class="pt-1 mb-4 d-grid">
                                        <button class="btn btn-brand" type="submit">Submit</button>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

</body>
</html>
