@model List<FoodOrderingSystem.Models.Menu>

<div class="container my-4">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-4">
    
    @foreach (var item in Model)
    {

<a href="@Url.Action("ItemDetail", "MenuItem", new { id = item.Id })" class="col d-flex justify-content-center">

      <div class="col d-flex justify-content-center">
        <div class="card" style="width:12rem; border-radius: 21px;">
          <div class="card-body d-flex flex-column align-items-center" style="gap: 0.2rem;">
            <h2>@item.Name</h2>
            <img src="@item.Image" alt="@item.Name">
            <p class="card-text text-center">@item.Description</p>
            <div class="container-price d-flex align-items-center justify-content-between" style="gap: 1rem;">
              <button class="btn btn-outline-primary">Rs @item.Price</button>
              <i class="fa-solid fa-cart-shopping fa-lg" style="font-size: 1.6em;"></i>
            </div>
          </div>
        </div>
      </div>
</a>
    }

  </div>
</div>

<nav aria-label="Page navigation" class="d-flex justify-content-center mt-4">
  <ul class="pagination">

    @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
    {
        <li class="page-item @(i == (int)ViewBag.CurrentPage ? "active" : "")">
            <a class="page-link" href="@Url.Action("Index", "Menu", new { page = i })">@i</a>
        </li>
    }

  </ul>
</nav>
