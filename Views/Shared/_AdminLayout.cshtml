<!-- Views/Shared/_AdminLayout.cshtml -->

<!DOCTYPE html>
<html>
<head>
    <title>Admin Panel</title>
    <link rel="stylesheet" href="~/css/admin.css" />
       <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
           <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/menu.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/menuitem.css" asp-append-version="true" />
</head>
<body>
 <main role="main" class="container-fluid px-0" style="min-height: 100vh; position: relative; background: #FF8C00;">
                <div style="width: 100%; height: 100vh; background: #FFC781; position:absolute; border-radius: 9999px; filter: blur(200px)"></div>
 
              
               <header>
      

@Html.Partial("_Navbar")

      

    </header>
          
        
   
  <div class="Dashboard-container">

    <div class="left-menuBar">
      <ul>
        <li><a href="@Url.Action("Index", "Admin")">Overview</a></li>
        <li><a href="@Url.Action("MenuItems", "Admin")">Menu Items</a></li>
        <li><a href="@Url.Action("AddMenu", "Admin")">Add Menu</a></li>
        <li><a href="@Url.Action("Requests", "Admin")">Requests</a></li>
        <li><a href="@Url.Action("Users", "Admin")">Users</a></li>
        <li>
          <form method="post" asp-controller="Account" asp-action="Logout" id="admin-form-controller">
            <button type="submit" id="admin-logout">Logout</button>
          </form>
        </li>
      </ul>
    </div>

    <div class="right-OverviewData">
      @RenderBody()
    </div>

  </div>
  </main>
  @RenderSection("Scripts", required: false)


</body>
</html>
